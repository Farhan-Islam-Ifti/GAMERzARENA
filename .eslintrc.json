{
    "env": {
      "browser": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended",
      "plugin:jest/recommended"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "react",
      "jest"
    ],
    "rules": {
      "react/react-in-jsx-scope": "off",
      "no-unused-vars": ["error", { "varsIgnorePattern": "^React$" }]
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  }
  